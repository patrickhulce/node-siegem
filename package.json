{
  "name": "siegem",
  "description": "SIEGE iMproved",
  "main": "index.js",
  "version": "0.0.0",
  "scripts": {
    "test": "xo",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "preferGlobal": true,
  "bin": {
    "siegem": "siegem.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/node-siegem.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/node-siegem/issues"
  },
  "homepage": "https://github.com/patrickhulce/node-siegem#readme",
  "dependencies": {
    "colors": "^1.1.2",
    "lodash": "^4.14.2",
    "yargs": "^4.7.1"
  },
  "devDependencies": {
    "semantic-release": "^4.3.5",
    "xo": "^0.16.0"
  },
  "xo": {
    "env": [
      "browser",
      "node",
      "mocha"
    ],
    "space": 2,
    "rules": {
      "complexity": [
        "warn",
        10
      ],
      "xo/filename-case": 0,
      "no-else-return": 0,
      "one-var": 0,
      "max-statements-per-line": [
        "error",
        {
          "max": 2
        }
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "dot-location": [
        "error",
        "object"
      ]
    }
  }
}
